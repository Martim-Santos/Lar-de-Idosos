@model Lar_de_Idosos.Models.Consulta

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Consulta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdosoFK" class="control-label"></label>
                <select asp-for="IdosoFK" class="form-control" asp-items="ViewBag.IdosoFK"></select>
                <span asp-validation-for="IdosoFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrabalhadorFK" class="control-label"></label>
                <select asp-for="TrabalhadorFK" class="form-control" asp-items="ViewBag.TrabalhadorFK"></select>
                <span asp-validation-for="TrabalhadorFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
